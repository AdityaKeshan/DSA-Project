            app:layout_column="1"
            app:layout_gravity="fill"
            app:layout_row="1" />

        <Button
            android:id="@+id/button7"
            android:layout_width="104.25dp"
            android:layout_height="69.5dp"
            android:text="9"
            app:layout_column="2"
            app:layout_gravity="fill"
            app:layout_row="1" />

        <Button
            android:id="@+id/button8"
            android:layout_width="104.25dp"
            android:layout_height="69.5dp"
            android:text="C"
            app:layout_column="3"
            app:layout_gravity="fill"
            app:layout_row="1" />

        <Button
            android:id="@+id/button9"
            android:layout_width="104.25dp"
            android:layout_height="69.5dp"
            android:text="4"
            app:layout_column="0"
            app:layout_gravity="fill"
            app:layout_row="2" />

        <Button
            android:id="@+id/button10"
            android:layout_width="104.25dp"
            android:layout_height="69.5dp"
            android:text="5"
            app:layout_column="1"
            app:layout_gravity="fill"
            app:layout_row="2" />

        <Button
            android:id="@+id/button11"
            android:layout_width="104.25dp"
            android:layout_height="69.5dp"
            android:text="6"
            app:layout_column="2"
            app:layout_gravity="fill"
            app:layout_row="2" />

        <Button
            android:id="@+id/button12"
            android:layout_width="104.25dp"
            android:layout_height="69.5dp"
            android:text="AC"
            app:layout_column="3"
            app:layout_gravity="fill"
            app:layout_row="2" />

        <Button
            android:id="@+id/button13"
            android:layout_width="104.25dp"
            android:layout_height="69.5dp"
            android:text="1"
            app:layout_column="0"
            app:layout_gravity="fill"
            app:layout_row="3" />

        <Button
            android:id="@+id/button14"
            android:layout_width="104.25dp"
            android:layout_height="69.5dp"
            android:text="2"
            app:layout_column="1"
            app:layout_gravity="fill"
            app:layout_row="3" />

        <Button
            android:id="@+id/button15"
            android:layout_width="104.25dp"
            android:layout_height="69.5dp"
            android:text="3"
            app:layout_column="2"
            app:layout_gravity="fill"
            app:layout_row="3" />

        <Button
            android:id="@+id/button16"
            android:layout_width="104.25dp"
            android:layout_height="69.5dp"
            android:text="^"
            app:layout_column="3"
            app:layout_gravity="fill"
            app:layout_row="3" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>